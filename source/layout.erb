<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1'/>
  <title>Jocellyn's Blog <%= ' - ' + current_article.title unless current_article.nil? %></title>
  <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet">
  <script type="text/javascript" src="//use.typekit.net/rao8kkm.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  <link href='http://fonts.googleapis.com/css?family=Dosis:200,400,700|Cabin:400,700,400italic|Josefin+Sans:100,400|Indie+Flower|Coming+Soon' rel='stylesheet' type='text/css'>
  <link href="/stylesheets/main.css" rel="stylesheet">
  <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
</head>
<body>


<div id="main" role="main" class="container">
  <div class="row">
    <a href="/"><h1 class="title"> Jocellyn's Blog</h1></a>

    <div class="col-md-3 image menu">
      <a href="/">
        <%= image_tag "images/2.jpeg", class: "logo" %>
      </a>
      <h2>Recent Articles</h2>
      <ol>
        <% blog.articles[0...10].each do |article| %>
          <li><%= link_to article.title, article %> </li>
      <% end %>
      </ol>

      <h2>Tags</h2>
      <ol>
        <% blog.tags.each do |tag, articles| %>
          <li><%= link_to "#{tag} (#{articles.size})", tag_path(tag) %></li>
      <% end %>
      </ol>

      <!--<h2>By Year</h2>-->
      <!--<ol>-->
      <!--<% blog.articles.group_by { |a| a.date.year }.each do |year, articles| %>-->
        <!--<li><%= link_to "#{year} (#{articles.size})", blog_year_path(year) %></li>-->
      <!--<% end %>-->
    <!--</ol>-->


  <div class="mailchimp">
    <!-- Begin MailChimp Signup Form -->
    <link href="//cdn-images.mailchimp.com/embedcode/classic-081711.css" rel="stylesheet" type="text/css">
    
    <div id="mc_embed_signup">
      <form action="http://jocellyn.us8.list-manage.com/subscribe/post?u=d2f9fd4a6c534e61e49d88789&amp;id=f641c875d5" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
        <h3>Subscribe to get new articles and tips for ruby beginners</h3>
        <div class="indicates-required"><span class="asterisk">*</span> indicates required</div>
        <div class="mc-field-group">
          <label for="mce-EMAIL">Email Address  <span class="asterisk">*</span>
          </label>
          <input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL">
        </div>
        <div id="mce-responses" class="clear">
          <div class="response" id="mce-error-response" style="display:none"></div>
          <div class="response" id="mce-success-response" style="display:none"></div>
        </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
        <div style="position: absolute; left: -5000px;"><input type="text" name="b_d2f9fd4a6c534e61e49d88789_f641c875d5" value=""></div>
        <div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button"></div>
      </form>
    </div> 
  </div>


    </div>
    <div class="col-md-6 articles">
      <%= yield %>
    </div>
  </div>
</div>

